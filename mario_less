#include <cs50.h>
#include <stdio.h>
int get_height()
{
        int n;
        do{
            n= get_int("Height : \n");
        }while(n<0);
        return n;    
}
int main(void)
{
    int n= get_height(); 
    for(int i=0;i<n;i++)
    {
        for(int j=0; j<(n-i-1) ;j++)
        {
            printf(" ");
        }
        for(int j=0;j<i+2;j++)
        {
            printf("#");
        }
        printf("\n");
    }
}
