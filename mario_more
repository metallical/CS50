#include <cs50.h>
#include <stdio.h>

void print_space(int i)
{  
    for(int j=0; j<i; j++)
        {
            printf(" ");
        }
}
void print_hash(int i, int n)
{
     for(int j= 0; j<n-i;j++)
        {
            printf("#");
        }
}
int get_height(void)
{
  int n;
        do{
            n= get_int("Height : \n");
        }while(n<0);
        return n;  
}

int main(void)
{
    int n= get_height();
    for(int i=n-1; i>=0;i--)
    {
       print_space(i);
       print_hash(i,n);
       printf(" ");
       print_hash(i,n);
       print_space(i);
       printf("\n");
    }
}
